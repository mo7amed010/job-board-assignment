generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid()) @db.Uuid
  fullName     String
  email        String        @unique
  password     String
  role         Role
  applications Application[]
  jobs         Job[]         @relation("PostedJobs")
}

model Job {
  id           String        @id @default(uuid()) @db.Uuid
  title        String
  description  String
  location     String
  salary       Float
  status       JobStatus
  createdBy    User          @relation("PostedJobs", fields: [createdById], references: [id])
  createdById  String        @db.Uuid
  applications Application[]
}

model Application {
  id          String            @id @default(uuid()) @db.Uuid
  resumeText  String
  coverLetter String
  status      ApplicationStatus
  job         Job               @relation(fields: [jobId], references: [id])
  jobId       String            @db.Uuid
  user        User              @relation(fields: [userId], references: [id])
  userId      String            @db.Uuid
}

enum Role {
  ADMIN
  JOBSEEKER
}

enum JobStatus {
  OPEN
  CLOSED
}

enum ApplicationStatus {
  SUBMITTED
  REVIEWED
  REJECTED
}
